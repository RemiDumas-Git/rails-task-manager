<div>
  <h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task) %>
         -
        <%= task.completed ? "✅" : "❌"  %>
         -
        <%= link_to "🗑️", tasks_delete_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %>
        </li>
    <% end %>
  </ul>
</div>

<button type="button" class="btn btn-primary">
<%= link_to 'Create a new task', new_task_path, class:"text-white" %>
</button>
